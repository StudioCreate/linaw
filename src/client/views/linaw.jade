doctype
html
  head
    title LInAW
    style.
      body {
        font-family: sans-serif;
        height: 100vh;
        margin: 0;
        overflow: hidden;
        -webkit-user-select: none;
        background: #363636;
        color: #fff;
      }
      h1,h2,h3,h4 {
        font-weight: lighter;
        margin: 1.5em 0 .5em;
        line-height: 1;
        display: flex;
        align-items: center;
      }
      button {
        padding: .5em 1em;
        margin: 0;
        min-width: 3em;
        cursor: pointer;
        border: 0;
        border-radius: 0;
        font-size: 1em;
        text-transform: uppercase;
        background: rgba(0,0,0,.1);
        color: currentColor;
      }
      button:hover {
        background: rgba(0,0,0,.2);
      }
      button:active {
        background: rgba(0,0,0,.3);
      }
      *:focus {
        outline: 0;
      }
      input[type="range"]{
        color: currentColor;
        -webkit-appearance: none;
        background: none;
        height: 4px;
        width: 300px;
        border: 1px solid;
        border-radius: 4px;
        margin: 8px 0;
        cursor: pointer;
        -webkit-user-select: none;
      }
      input[type="range"]::-webkit-slider-thumb {
        -webkit-appearance: none;
        background: currentColor;
        border: 1px solid;
        height: 24px;
        width: 24px;
        border-radius: 24px;
        cursor: -webkit-grab;
      }
      input[type="range"]::-webkit-slider-thumb:active {
        cursor: -webkit-grabbing;

      }

  body
    #LInAW
    script(src='/linaw.js')
