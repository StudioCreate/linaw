doctype
html
  head
    title LInAW
    style.
      body {
        font-family: sans-serif;
        height: 100vh;
        margin: 0;
        overflow: hidden;
      }
      h1,h2,h3,h4 {
        font-weight: lighter;
        margin: 1.5em 0 .5em;
        line-height: 1;
        display: flex;
        align-items: center;
      }
      button {
        border: 1px solid;
        padding: 1em;
        background: none;
        border-radius: 3px;
        font-size: .25em 1em;
        margin: 0 .5em .5em 0;
        color: currentColor;
        cursor: pointer;
      }
      *:focus {
        outline: 0;
      }
      input[type="range"]{
        color: currentColor;
        -webkit-appearance: none;
        background: none;
        height: 8px;
        width: 300px;
        border: 1px solid;
        border-radius: 8px;
        margin: 8px 0;
        cursor: pointer;
        -webkit-user-select: none;
      }
      input[type="range"]::-webkit-slider-thumb {
        -webkit-appearance: none;
        background: currentColor;
        border: 1px solid;
        height: 36px;
        width: 8px;
        border-radius: 8px;
        cursor: -webkit-grab;
      }
      input[type="range"]::-webkit-slider-thumb:active {
        cursor: -webkit-grabbing;

      }

  body
    #LInAW
    script(src='/linaw.js')
